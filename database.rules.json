{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
      "games": {
            ".indexOn": ["state"],
              "$gameId": {
                //".read": "auth != null",
                "numberOfPlayers": {
                    ".validate": "newData.isNumber() && newData.val() > 0"
              	    }
            	  }
          	},
      "users": {
            "$uid": {
              ".write": "$uid === auth.uid"
            }
        },
      "requests": {
    		"$request": {
          "$uid": {			
              ".write": "$uid === auth.uid",
              ".read": "$uid === auth.uid"         
          }
        },
      "responses": {
    		"$response": {
          "$uid": {			
              ".write": "$uid === auth.uid",
              ".read": "$uid === auth.uid"          
          }
        }
          
      }
    }
  }
}