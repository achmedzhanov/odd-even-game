{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
      "games": {
            ".indexOn": ["state"],
              "$gameId": {
                "numberOfPlayers": {
                    ".validate": "newData.isNumber() && newData.val() > 0"
              	    }
            	  }
          	},
      "users": {
            "$uid": {
              ".write": "$uid === auth.uid"
            }
        }             
  }
}